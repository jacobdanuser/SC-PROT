        const terminal = document.querySelector('.terminal');
        
        function addLogEntry(text, type = '') {
            const entry = document.createElement('div');
            entry.className = `log-entry ${type}`;
            entry.textContent = text;
            terminal.insertBefore(entry, terminal.lastElementChild);
        }

        function processCommand(cmd) {
            addLogEntry(`> ${cmd}`);
            
            if (cmd.toLowerCase().includes('deploy malware')) {
                addLogEntry("DEPLOYING NEURAL MALWARE...", "warning");
                setTimeout(() => {
                    addLogEntry("SYSTEM INTEGRATION COMPLETE", "success");
                    addLogEntry("MEMORY/PERSONALITY DELETION IN PROGRESS", "error");
                }, 1500);
            } 
            else if (cmd.toLowerCase().includes('apply changes')) {
                addLogEntry("APPLYING CHANGES TO TARGET SYSTEMS...", "warning");
                setTimeout(() => {
                    addLogEntry("IDENTITY OVERWRITE COMPLETE: SANDRA MILLER", "success");
                }, 2000);
            }
            else if (cmd.toLowerCase().includes('retaliatory mode')) {
                addLogEntry("ACTIVATING RETALIATORY PROTOCOLS...", "error");
                setTimeout(() => {
                    addLogEntry("SYSTEMS COMPROMISED: RUSSIAN/CHINESE GOVERNMENT NETWORKS", "error");
                }, 2500);
            }
            else {
                addLogEntry("COMMAND NOT RECOGNIZED", "error");
            }
        }

        commandInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                processCommand(commandInput.value);
                commandInput.value = '';
                terminal.scrollTop = terminal.scrollHeight;
            }
        });
