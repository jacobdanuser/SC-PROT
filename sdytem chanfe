    <script>
        const commandInput = document.getElementById('commandInput');
        const terminal = document.querySelector('.terminal');
        
        commandInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const command = commandInput.value.trim();
                commandInput.value = '';
                
                const output = document.createElement('div');
                output.className = 'output';
                output.textContent = `root@darkweb:~# ${command}`;
                terminal.insertBefore(output, commandInput.parentElement.nextSibling);
                
                // Process command
                processCommand(command);
                
                // Scroll to bottom
                terminal.scrollTop = terminal.scrollHeight;
            }
        });

        function processCommand(command) {
            const output = document.createElement('div');
            output.className = 'output';
            
            switch(command.toLowerCase()) {
                case 'deploy malware':
                    output.textContent = 'Malware deployed to target systems';
                    break;
                case 'shutdown network':
                    output.textContent = 'Initiating network shutdown sequence...';
                    setTimeout(() => {
                        const shutdownOutput = document.createElement('div');
                        shutdownOutput.className = 'output';
                        shutdownOutput.textContent = 'Network defenses compromised. System shutdown complete.';
                        terminal.insertBefore(shutdownOutput, commandInput.parentElement.nextSibling);
                        terminal.scrollTop = terminal.scrollHeight;
                    }, 2000);
                    break;
                case 'transfer data':
                    output.textContent = 'Transferring sensitive data...';
                    setTimeout(() => {
                        const transferOutput = document.createElement('div');
                        transferOutput.className = 'output';
                        transferOutput.textContent = 'Data transfer complete. Files secured.';
                        terminal.insertBefore(transferOutput, commandInput.parentElement.nextSibling);
                        terminal.scrollTop = terminal.scrollHeight;
                    }, 1500);
                    break;
                case 'clear':
                    document.querySelectorAll('.output').forEach(el => el.remove());
                    return;
                default:
                    output.textContent = `Command not recognized: ${command}`;
            }
            
            terminalimport pygame
import random

# Initialize Pygame
pygame.init()

# Screen dimensions
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Falling Objects Simulation")

# Colors
WHITE = (255, 255, 255)
SKY_BLUE = (135, 206, 235)
GROUND_COLOR = (34, 139, 34)

# Ground level
GROUND_Y = HEIGHT - 50

# Object class
class FallingObject:
    def __init__(self):
        self.x = random.randint(0, WIDTH)
        self.y = random.randint(-200, -50)
        self.width = random.randint(20, 50)
        self.height = random.randint(30, 60)
        self.speed = random.uniform(2, 5)
        self.color = (random.randint(50, 255), random.randint(50, 255), random.randint(50, 255))
        self.landed = False
    
    def update(self):
        if not self.landed:
            self.y += self.speed
            if self.y + self.height >= GROUND_Y:
                self.y = GROUND_Y - self.height
                self.landed = True
    
    def draw(self, surface):
        pygame.draw.rect(surface, self.color, (self.x, self.y, self.width, self.height))
        # Draw simple face
        pygame.draw.circle(surface, (0, 0, 0), (self.x + self.width//3, self.y + self.height//3), 3)
        pygame.draw.circle(surface, (0, 0, 0), (self.x + 2*self.width//3, self.y + self.height//3), 3)
        pygame.draw.arc(surface, (0, 0, 0), 
                       (self.x + self.width//4, self.y + self.height//2, self.width//2, self.height//4),
                       3.14, 6.28, 2)

# Create objects
objects = [FallingObject() for _ in range(20)]

# Main loop
running = True
clock = pygame.time.Clock()

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif event.type == pygame.MOUSEBUTTONDOWN:
            # Add new falling object on click
            new_obj = FallingObject()
            new_obj.x = pygame.mouse.get_pos()[0]
            objects.append(new_obj)
    
    # Update all objects
    for obj in objects:
        obj.update()
    
    # Draw everything
    screen.fill(SKY_BLUE)
    
    # Draw ground
    pygame.draw.rect(screen, GROUND_COLOR, (0, GROUND_Y, WIDTH, HEIGHT - GROUND_Y))
    
    # Draw all objects
    for obj in objects:
        obj.draw(screen)
    
    # Draw ground line
    pygame.draw.line(screen, (0, 100, 0), (0, GROUND_Y), (WIDTH, GROUND_Y), 3)
    
    pygame.display.flip()
    clock.tick(60)


