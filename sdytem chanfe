```# Original speed: random.uniform(2, 5)
# Reduced speed: random.uniform(0.5, 2)
self.speed = random.uniform(0.5, 2)import pygame
import random

# Initialize Pygame
pygame.init()

# Screen dimensions
WIDTH, HEIGHT = 800, 600
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Falling Objects - Slow Motion")

# Colors
WHITE = (255, 255, 255)
SKY_BLUE = (135, 206, 235)
GROUND_COLOR = (34, 139, 34)

# Ground level
GROUND_Y = HEIGHT - 50

# Object class
class FallingObject:
    def __init__(self):
        self.x = random.randint(0, WIDTH)
        self.y = random.randint(-200, -50)
        self.width = random.randint(20, 50)
        self.height = random.randint(30, 60)
        # REDUCED SPEED - Slower falling
        self.speed = random.uniform(0.5, 2)  # Reduced from 2-5 to 0.5-2
        self.color = (random.randint(50, 255), random.randint(50, 255), random.randint(50, 255))
        self.landed = False
    
    def update(self):
        if not self.landed:
            self.y += self.speed
            if self.y + self.height >= GROUND_Y:
                self.y = GROUND_Y - self.height
                self.landed = True
    
    def draw(self, surface):
        pygame.draw.rect(surface, self.color, (self.x, self.y, self.width, self.height))
        # Draw simple face
        pygame.draw.circle(surface, (0, 0, 0), (self.x + self.width//3, self.y + self.height//3), 3)
        pygame.draw.circle(surface, (0, 0, 0), (self.x + 2*self.width//3, self.y + self.height//3), 3)
