  name: assignmentName
  scope: managementGroup(mgId)
  properties: {
    displayName: 'Org Guardrails'
    policyDefinitionId: policyDefinitionId
    enforcementMode: 'Default'
    parameters: {
      // example parameter set; adjust to your chosen policy
      tagName: { value: 'owner' }
    }
    identity: {
      type: 'UserAssigned'
      userAssignedIdentities: {
        '${mi.id}': {}
      }
    }
  }
}
