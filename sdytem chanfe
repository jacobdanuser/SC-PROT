                // Add the command to the terminal
                addOutput(`> ${command}`, 'command');
                
                // Process the command
                processCommand(command);
            }
        });
        
        function addOutput(text, className = 'output') {
            const div = document.createElement('div');
            div.className = className;
            div.textContent = text;
            terminal.insertBefore(div, document.querySelector('.command-line'));
            terminal.scrollTop = terminal.scrollHeight;
        }
        
        function processCommand(command) {
            // Simulate processing delay
            setTimeout(() => {
                if (command.toLowerCase() === 'help') {
                    addOutput('Available commands:');
                    addOutput('status - Show system status');
                    addOutput('targets - List active targets');
                    addOutput('deploy - Execute neural rewrite');
                    addOutput('exit - Terminate connection');
                } else if (command.toLowerCase() === 'status') {
                    addOutput('System status:', 'output');
                    addOutput('Neural malware: ACTIVE', 'success');
                    addOutput('Memory overwrite: IN PROGRESS', 'output');
                    addOutput('Firewall penetration: 87%', 'output');
                } else if (command.toLowerCase() === 'targets') {
                    addOutput('Active targets:', 'output');
                    addOutput('Sandra Miller - Cognitive replacement: 45%', 'output');
                    addOutput('Emily Miller - Memory suppression: 72%', 'output');
