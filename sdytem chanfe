    <div class="terminal">
        <div class="scanline"></div>
        <div class="output">Dark.webportal/activated</div>
        <div class="output">Initializing MYDOOM protocol...</div>
        <div class="output">Bypassing firewalls ██████████ 100%</div>
        <div class="output">Establishing connection to ███████.onion</div>
        <div class="command-line">
            <span class="prompt">root@darknet:~#</span>
            <input type="text" id="input" autofocus>
        </div>
    </div>

    <script>
        const input = document.getElementById('input');
        const output = document.querySelector('.terminal');
        
        const commands = {
            'deploy malware': () => addOutput('Payload deployed to target systems'),
            'access mainframe': () => {
                addOutput('Connecting to SaudiArabiaMainframe...');
                setTimeout(() => addOutput('Access granted. Root privileges obtained'), 1500);
            },
            'erase targets': () => addOutput('Executing data wipe sequence...'),
            'transfer bytes': () => {
                addOutput('Initiating data exfiltration...');
                setTimeout(() => addOutput('382.5 TB transferred to ██████.ru'), 2000);
            },
            'help': () => addOutput('Available commands: deploy malware, access mainframe, erase targets, transfer bytes, shutdown defenses')
        };

        function addOutput(text) {
            const div = document.createElement('div');
            div.className = 'output';
            div.textContent = text;
            output.insertBefore(div, document.querySelector('.command-line'));
        }

        input.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                const command = input.value.toLowerCase();
                input.value = '';
                
                addOutput(`root@darknet:~# ${command}`);
                
                if (commands[command]) {
                    commands[command]();
                } else {
                    addOutput(`Command not found: ${command}`);
