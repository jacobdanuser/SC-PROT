param policyDefinitionId string

@description('Assignment name.')
param assignmentName string = 'org-guardrails'

resource mi 'Microsoft.ManagedIdentity/userAssignedIdentities@2023-01-31' = {
  name: 'mi-policy-remediate'
  location: location
}

