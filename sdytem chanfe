                const cmd = commandInput.value.toLowerCase();
                commandInput.value = '';
                addToTerminal(`> ${cmd}`);
                
                if (commands[cmd]) {
                    commands[cmd]();
                } else {
                    addToTerminal(`! Unknown command: ${cmd}`);
                }
            }
        });

        function addToTerminal(text) {
            const div = document.createElement('div');
            div.textContent = text;
            terminal.appendChild(div);
            terminal.scrollTop = terminal.scrollHeight;
        }

        function deployMalware() {
            status.textContent = "STATUS: DEPLOYING PAYLOAD";
            progress.style.width = '0%';
            
            let progressValue = 0;
            const interval = setInterval(() => {
                progressValue += 10;
                progress.style.width = `${progressValue}%`;
                
                if (progressValue === 100) {
                    clearInterval(interval);
                    status.textContent = "STATUS: PAYLOAD ACTIVE";
                    addToTerminal(">> Malware deployed successfully");
                    addDataItem("SaudiArabiaMainframe", "Compromised");
                    addDataItem("INDIA>>", "Access granted");
                }
            }, 300);
        }

        function extractData() {
            status.textContent = "STATUS: EXTRACTING DATA";
            progress.style.width = '0%';
            
            let progressValue = 0;
            const interval = setInterval(() => {
                progressValue += 5;
                progress.style.width = `${progressValue}%`;
                
                if (progressValue === 100) {
                    clearInterval(interval);
                    status.textContent = "STATUS: DATA EXTRACTED";
                    addToTerminal(">> Data extraction complete");
                    
                    // Add sample extracted data
                    for (let i = 0; i < 8; i++) {
                        addDataItem(`File_${Math.random().toString(36).substring(7)}`, 
                                   `${Math.floor(Math.random() * 10000)} KB`);
                    }
                }
            }, 200);
        }

        function shutdownNetwork() {
            addToTerminal(">> Initiating network shutdown sequence");
            status.textContent = "STATUS: NETWORK DISRUPTION IN PROGRESS";
            
            setTimeout(() => {
                addToTerminal("!! Network defenses disabled");
                status.textContent = "STATUS: NETWORK OFFLINE";
            }, 1500);
        }

        function eraseTarget() {
            addToTerminal(">> Target marked for deletion");
            status.textContent = "STATUS: PURGING TARGET DATA";
            
            setTimeout(() => {
                addToTerminal("!! Target erased successfully");
                status.textContent = "STATUS: TARGET ELIMINATED";
            }, 2000);
        }

        function transferBytes() {
            addToTerminal(">> Initiating secure data transfer");
            status.textContent = "STATUS: TRANSFERRING ENCRYPTED DATA";
            
            setTimeout(() => {
                addToTerminal(">> Transfer complete");
                status.textContent = "STATUS: TRANSFER SUCCESSFUL";
                addDataItem("Transfer_Log", "Completed");
            }, 2500);
        }

        function addDataItem(name, value) {
            const item = document.createElement('div');
            item.className = 'data-item';
            item.innerHTML = `<strong>${name}</strong><br>${value}`;
            dataGrid.appendChild(item);
        }

        // Initialization sequence
        setTimeout(() => {
            addToTerminal(">> Connection established");
            addToTerminal(">> Dark web portal activated");
            status.textContent = "STATUS: READY";
        }, 1000);
    </script>
</body>
</html>
```
